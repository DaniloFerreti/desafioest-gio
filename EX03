faturamento_diario = [200, 450, 300, 500, 250, 600, 350, 400, 700, 300, 350, 450]
menor_faturamento = min(faturamento_diario)
maior_faturamento = max(faturamento_diario)
media_mensal = sum(faturamento_diario) / len(faturamento_diario)
dias_acima_da_media = sum(1 for valor in faturamento_diario if valor > media_mensal)
print(f"Menor valor de faturamento: R${menor_faturamento}")
print(f"Maior valor de faturamento: R${maior_faturamento}")
print(f"Número de dias com faturamento superior à média mensal: {dias_acima_da_media}")
